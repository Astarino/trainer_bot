# Application Settings
APP_NAME=Fitness Trainer API
DEBUG=true
ENVIRONMENT=development

# Database
# For SQLite (development):
DATABASE_URL=sqlite:///./trainer.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/trainer_db

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
FRONTEND_URL=http://localhost:5173

# Redis (optional - for caching)
